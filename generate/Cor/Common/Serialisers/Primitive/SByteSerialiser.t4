    public class SByteSerialiser
        : Serialiser<SByte>
    {
        public SByteSerialiser () {}

        public override SByte Read(BinaryReader abr)
        {
            return abr.ReadSByte ();
        }

        public override void Write(BinaryWriter abw, SByte obj)
        {
            abw.Write(obj);
        }
    }

