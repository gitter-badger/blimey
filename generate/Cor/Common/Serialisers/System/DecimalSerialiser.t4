    public class DecimalSerialiser
        : TypeSerialiser<Decimal>
    {
        public DecimalSerialiser () {}

        public override Decimal Read(BinaryReader abr)
        {
            return abr.ReadDecimal ();
        }

        public override void Write(BinaryWriter abw, Decimal obj)
        {
            abw.Write(obj);
        }
    }

