    public class Int16Serialiser
        : TypeSerialiser<Int16>
    {
        public Int16Serialiser () {}

        public override Int16 Read(BinaryReader abr)
        {
            return abr.ReadInt16 ();
        }

        public override void Write(BinaryWriter abw, Int16 obj)
        {
            abw.Write(obj);
        }
    }

